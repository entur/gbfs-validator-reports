{
  "name": "gbfs-validator-reports",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@auth0/auth0-react": "1.4.0",
    "@entur/button": "2.5.1",
    "@entur/form": "4.4.0",
    "@entur/icons": "1.20.0",
    "@entur/layout": "1.10.2",
    "@entur/menu": "3.6.0",
    "@entur/modal": "1.3.15",
    "@entur/table": "4.3.7",
    "@entur/tokens": "3.0.1",
    "@entur/tooltip": "2.4.16",
    "@entur/typography": "1.6.5",
    "firebase": "8.4.1",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.1"
  },
  "scripts": {
    "prestart": "npm run build:functions",
    "start": "run-p --race start:firebase start:react",
    "start:firebase": "firebase emulators:start",
    "start:react": "react-scripts start",
    "build": "run-p build:react build:functions",
    "build:react": "react-scripts build",
    "build:functions": "npm run --prefix functions build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "11.2.6",
    "@types/jest": "26.0.22",
    "@types/react": "16.14.15",
    "@types/react-dom": "16.9.12",
    "@types/react-router-dom": "5.1.7",
    "firebase-tools": "9.10.0",
    "prettier": "2.2.1",
    "typescript": "4.2.4"
  },
  "proxy": "http://localhost:5000",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "homepage": "/mobility/v2/validation-reports"
}
